enter = ""
enter = input("Choose A(A) or Б(B): ")
if enter.upper() == "A" or enter.upper() == "A":
    text = input("Enter text : ")
    print(text)
    y = text.replace('.','').replace(',','').replace('!','').replace('?','').replace(':','').replace(';','')
    text = sort
    words = y.split()
    print ([word for word in words if len(word) > 3] )
    
elif enter == "B":
    alphabet = " ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz"
    a = input().split()
    for x in range(len(alphabet)):
        number = 0
        for i in a:
            number = number + i.count(alphabet[x])
        if number > 0 :
            print(alphabet[x]+ "-" + str(number))
    print("-------------------")




